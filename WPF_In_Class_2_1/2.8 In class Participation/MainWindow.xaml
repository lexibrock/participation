<Window x:Class="_2._8_In_class_Participation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2._8_In_class_Participation"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox>
            <Label x:Name="lblPetName" Content="Pet Name:"/>
            <ListBox x:Name="lstPets" Height="182" Width="272" RenderTransformOrigin="0.473,0.455" SelectionChanged="lstPets_SelectionChanged"/>
            <Label x:Name="lblPetBreed" Content="Pet Breed:"/>
            <Label x:Name="lblURL" Content="URL to pic:"/>
            <Button Content="Add Pet"/>
            <Image x:Name="imgPet" Height="100" Width="100"/>
        </ListBox>
        <TextBox x:Name="txtbxPetName" HorizontalAlignment="Left" Margin="90,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtbxPetBreed" HorizontalAlignment="Left" Margin="90,230,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtbxURL" HorizontalAlignment="Left" Margin="90,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
